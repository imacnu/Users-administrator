<div class="wrapper col-xs-12">
  <h1>Listado de candidatos</h1>
</div>
<div class="row">
   <div class="col-xs-6">
      <%= paginate @users %>  
    </div>
    <div class="col-xs-6 text-right">
       <%= link_to "CSV", users_path(format: "csv")  %> |
       <%= link_to "XLS", users_path(format: "xls")  %>
    </div>
</div>

<div class="row">
  <table class="table">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Mail</th>
        <th>Desempleado</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
        <%= render 'users' %>  
    </tbody>
  </table>
</div>


<%= link_to 'Nuevo usuario', new_user_path, class:"btn btn-primary" %>



